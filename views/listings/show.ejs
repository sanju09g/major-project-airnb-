<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container my-1">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8">
      <h3 class="mb-3"><%= listing.title %></h3>
      <div class="card show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img mb-2" alt="listing-img">
        <div class="list-details">
          <span><b>Owned by:</b> <%= listing.owner.username %></span>
          <% if(!currUser._id.equals(listing.owner._id)) {%>
          <form
            id="book"
            method="get"
            action="/listings/booking/<%= listing._id %>"
          >
            <% if (listing.isBooked) { %>
            <button type="button" class="btn disabled btn-secondary">
              Booked
            </button>
            <% } else { %>
            <button class="btn book-btn" type="submit">Book Now</button>
            <% } %>
          </form>
          <% } %>
           
        </div>

        <div class="card-body">
          <!-- <div class="show-detail mb-2">
            <div class="badge-category-show mb-2 visibility-down"><%= listing.category.toUpperCase() %></div>
          </div> -->
          <p class="card-text mt-3"><%= listing.description %></p>
          <p class="card-text fw-bold">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
          <p class="card-text"><i class="fa-solid fa-location-dot"></i> &nbsp;<%= listing.location %></p>
          <p class="card-text"><i class="fa-solid fa-globe"></i> &nbsp;<%= listing.country %></p>
        </div>
      </div>

      <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="row g-2 my-4">
        <div class="col-6 col-sm-3 col-md-2 col-lg-3 col-xl-2">
          <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn w-100">Edit</a>
        </div>
        <div class="col-6 col-sm-3 col-md-2 col-lg-3 col-xl-2">
          <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark w-100" type="submit">Delete</button>
          </form>
        </div>
      </div>
      <% } %>

      <% if(currUser) { %>
      <hr>
      <h4>Leave a review</h4>
      <form method="post" action="/listings/<%= listing.id %>/reviews" class="mt-3 needs-validation" novalidate>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control glow-field" required></textarea>
          <div class="invalid-feedback">Please add some comment for review</div>
        </div>

        <button class="btn btn-outline-dark" type="submit">Submit</button>
      </form>
      <hr>
      <% } %>

      <% if(listing.reviews.length > 0) { %>
      <h4>All Reviews</h4>
      <div class="row g-3 mt-2">
        <% for(review of listing.reviews) { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
          <div class="card h-100 p-3">
            <div class="card-body">
              <h5 class="card-title"><strong><%= review.author.username %></strong></h5>
              <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
              <p class="card-text"><%= review.comment %></p>
              <% if(currUser && review.author._id.equals(currUser._id)) { %>
              <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>


      <h3 class="col-12 mt-4">Where you'll be</h3>
    <div class="col-12">
     <div id="map" class="mt-3 w-100"></div>
</div>
      
    </div>
  </div>
</div>

<script src="/css/js/map.js"></script>
