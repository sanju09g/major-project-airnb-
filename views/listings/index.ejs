<% layout("/layouts/boilerplate") %>
<body>

<div id="filters" class="d-flex flex-wrap align-items-center justify-content-between">
  
  <div class="d-none d-xl-flex flex-wrap">
    <div class="filter">
      <a class="filter-link" href="/listings">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>
    </div>
    <div class="filter">
      <a class="filter-link" href="/listings/category/Rooms">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>
    </div>
    <div class="filter">
      <a class="filter-link" href="/listings/category/Iconic cities">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </a>
    </div>
    <div class="filter">
      <a class="filter-link" href="/listings/category/Mountains">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>
    </div>
    <div class="filter">
      <a class="filter-link" href="/listings/category/Pools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </a>
    </div>
    <div class="filter">
      <a class="filter-link" href="/listings/category/Farms">
        <div><i class="fa-brands fa-cow"></i></div>
        <p>Farms</p>
      </a>
    </div>
    <div class="filter">
      <a class="filter-link" href="/listings/category/Arctic">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
    </div>
    <div class="filter">
      <a class="filter-link" href="/listings/category/Domes">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </a>
    </div>
    <div class="filter">
      <a class="filter-link" href="/listings/category/House boats">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>House boats</p>
      </a>
    </div>
  </div>

  <div class="d-xl-none w-100">
    <div class="dropdown d-flex justify-content-between align-items-center">
      <select class="form-select w-75" onchange="location = this.value;">
        <option selected disabled>Choose category</option>
        <option value="/listings">Trending</option>
        <option value="/listings/category/Rooms">Rooms</option>
        <option value="/listings/category/Iconic cities">Iconic cities</option>
        <option value="/listings/category/Mountains">Mountains</option>
        <option value="/listings/category/Pools">Amazing pools</option>
        <option value="/listings/category/Farms">Farms</option>
        <option value="/listings/category/Arctic">Arctic</option>
        <option value="/listings/category/Domes">Domes</option>
        <option value="/listings/category/House boats">House boats</option>
      </select>

    
      <div class="form-check form-switch ms-3">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchMobile">
        <label class="form-check-label" for="flexSwitchMobile">Tax</label>
      </div>
    </div>
  </div>

  <div class="tax-toggle d-none d-xl-block">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">&nbsp; Display total after taxes</label>
    </div>
  </div>
</div>

    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-3 mt-2 ">
        <% for(let listing of allListings){ %>
            <a class="listing-link" href="/listings/<%= listing._id %>">
            <div class="card listing-card w-100 w-sm-75 w-md-50 w-lg-25 mb-5">
              
                <img src="<%= listing.image.url %>" class="card-img-top card-img" alt="listing-img" style="height: 20rem;">
             
                <div class="card-img-overlay"><i class="fa-regular fa-compass"></i></div>

                <div class="card-body">
                  <p class="card-text mt-3"><b><%= listing.title %></b></p>
                   <p> &#x20B9;<%= listing.price.toLocaleString("en-IN") %> /night 
                    <i class="tax-info"> &nbsp; &nbsp; +18% GST</i></p> 
                    <hr>
                    <div style="width: 100%;">
                      <form id="book" method="get" action="/listings/booking/<%= listing._id %>">
                        <% if (!listing.isBooked) { %>
                          <span class="availability-label available">Check Availability</span>
                        <% } else { %>
                          <span class="availability-label unavailable">Not Available</span>
                        <% } %>
                      
                        </form>
                    </div>
                  
                  <span class="badge-category">
                    <%= listing.category %>
                  </span>
                </div>
            
              </div>
            </a>
              <% } %>
    </div>
</body>
<script>
  function toggleTaxInfo() {
    const taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = (info.style.display !== "inline") ? "inline" : "none";
    }
  }

  // Desktop toggle
  const taxSwitchDesktop = document.getElementById("flexSwitchCheckDefault");
  if (taxSwitchDesktop) {
    taxSwitchDesktop.addEventListener("click", toggleTaxInfo);
  }

  // Mobile toggle
  const taxSwitchMobile = document.getElementById("flexSwitchMobile");
  if (taxSwitchMobile) {
    taxSwitchMobile.addEventListener("click", toggleTaxInfo);
  }
</script>