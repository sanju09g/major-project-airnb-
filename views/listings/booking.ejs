<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <form class="mt-3 needs-validation" method="post" action="/listings/<%= bookingListing._id %>/booking" novalidate>

      <!-- Full Name -->
      <div class="mb-3">
        <label for="Name" class="form-label"><h4>Full Name</h4></label>
        <input type="text" name="booking[fullName]" class="form-control" id="Name" required placeholder="Enter your full name">
        <div class="invalid-feedback">Name is required</div>
      </div>

      <!-- Email & Number of Persons -->
      <div class="row">
        <div class="mb-3 col-6">
          <label for="Email" class="form-label"><h4>Email</h4></label>
          <input type="email" name="booking[email]" class="form-control" id="Email" required placeholder="Enter your email">
          <div class="invalid-feedback">Email is required</div>
        </div>

        <div class="mb-3 col-6">
          <label for="NOP" class="form-label"><h4>How many persons?</h4></label>
          <select name="booking[NOP]" id="NOP" class="form-select" required>
            <option  disabled selected>Select no. of persons</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
            <option value="4">Four</option>
          </select>
          <div class="invalid-feedback">Please select number of persons</div>
        </div>
      </div>

      <!-- Contact, Check-in, Check-out -->
      <div class="row">
        <div class="mb-3 col-4">
          <label for="contact" class="form-label"><h4>Contact No.</h4></label>
          <input type="text" class="form-control" name="booking[contact]" placeholder="Phone number" required id="contact">
          <div class="invalid-feedback">Phone number is required</div>
        </div>

        <div class="mb-3 col-4">
          <label for="checkIn" class="form-label"><h4>Check-In</h4></label>
          <input type="date" name="booking[checkIn]" id="checkIn" required class="form-control">
          <div class="invalid-feedback">Check-in date is required</div>
        </div>

        <div class="mb-3 col-4">
          <label for="checkOut" class="form-label"><h4>Check-Out</h4></label>
          <input type="date" name="booking[checkOut]" id="checkOut" required class="form-control">
          <div class="invalid-feedback">Check-out date is required</div>
        </div>
      </div>

      <!-- Room Type -->
      <div class="mb-3">
        <label for="roomType" class="form-label"><h4>Room Type</h4></label>
        <select name="booking[roomType]" id="roomType" class="form-select" required>
          <option value="" disabled selected>Select room type</option>
          <option value="Single">Single</option>
          <option value="Double">Double</option>
          <option value="Deluxe">Deluxe</option>
        </select>
        <div class="invalid-feedback">Please select room type</div>
      </div>

      <!-- Submit -->
      <button class="btn mb-3 btn-dark btn-create" type="submit">
        Pay â‚¹<%= bookingListing.price || "Amount" %>
      </button>

    </form>
  </div>
</div>
