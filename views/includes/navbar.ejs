<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    padding: 0 1rem;
    border-radius: 20px;
    font-size: 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.6rem;
  }

  .collapse {
    display: block !important;
  }

  .search-inp {
    border-radius: 20px;
    padding: 0.5rem 3rem;
    font-size: 0.9rem;
    width: 100%;
  }
  .collapse {
    display: flex !important;
    flex-direction: row !important;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    flex: 1;
  }

  .navbar-nav,
  .auth-dropdown {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  @media (max-width: 592px) {
    .search-inp {
      font-size: 0.7rem;
      padding: 0.5rem 1rem;
      width: 67%;
    }

    .search-btn {
      padding: 0 2.8rem 0 0rem;
      overflow: hidden;
      font-size: 0.3rem;
      width: 10%;
    }

    .auth-dropdown {
      width: 10%;
      font-size: 1rem;
    }

    .search-form {
      width: 67%;
    }

    .auth-dropdown .dropdown-menu {
      width: 10%;
    }

    .collapse {
      display: flex !important;
      flex-direction: row !important;
      justify-content: flex-start !important;
      align-items: center;
      flex: 1;
    }

    .navbar-nav,
    .auth-dropdown {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    @media (max-width: 434px) {
      .navbar-nav,
      .auth-dropdown {
        font-size: 0.7rem;
        display: flex;
        align-items: center;
        gap: 0;
      }

      .collapse {
        justify-content: flex-start !important;
      }
    }

    @media (max-width: 409px) {
      .search-inp {
        font-size: 0.7rem;
        padding: 0.5rem 1rem;
        width: 65%;
        height: 1.875rem;
      }

      .search-form {
        width: 65%;
      }
    }

    @media (max-width: 345px) {
      .search-inp {
        font-size: 0.7rem;
        padding: 0.5rem 1rem;
        height: 1.875rem;
        width: 62%;
      }

      .search-form {
        width: 62%;
      }
    }
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
  <div class="container-fluid main-div">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>

    <!-- Search always visible -->
    <form class="d-flex search-form my-2 my-md-0" role="search">
      <input class="form-control me-2 search-inp" type="search" placeholder="Search place....">
      <button class="btn search-btn" type="submit">
        <i class="fa-brands fa-searchengin"></i>
      </button>
    </form>

    <!-- Collapsible Nav items -->
    <div class="collapse justify-content-end me-1" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Collapsed Dropdown Auth Section -->
      <div class="auth-dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
          Menu
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
          <li><a class="dropdown-item" href="/listings/new">Airbnb your home</a></li>
          <% if (!currUser) { %>
            <li><a class="dropdown-item" href="/signup"><b>SignUp</b></a></li>
            <li><a class="dropdown-item" href="/login"><b>LogIn</b></a></li>
          <% } %>
          <% if (currUser) { %>
            <li><a class="dropdown-item" href="/logout"><b>LogOut</b></a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</nav>
