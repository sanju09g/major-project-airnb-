<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    padding: 0 1rem;
    border-radius: 20px;
    font-size: 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.6rem;
  }

  .search-inp {
    border-radius: 20px;
    padding: 0.5rem 3rem;
    font-size: 0.9rem;
    width: 100%;
  }

  @media (max-width: 592px) {
    .search-inp {
      font-size: 0.7rem;
      padding: 0.5rem 1rem;
      width: 67%;
      height: 1.875rem;
    }

    .search-btn {
      padding: 0 2.8rem 0 0rem;
      overflow: hidden;
      font-size: 0.3rem;
      width: 10%;
    }

    .search-form {
      width: 67%;
    }

    .navbar-nav {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    @media (max-width: 434px) {
      .navbar-nav {
        font-size: 0.7rem;
        display: flex;
        align-items: center;
        gap: 0;
      }
    }

    @media (max-width: 409px) {
      .search-inp {
        font-size: 0.7rem;
        padding: 0.5rem 1rem;
        width: 65%;
        height: 1.875rem;
      }

      .search-form {
        width: 65%;
      }
    }

    @media (max-width: 345px) {
      .search-inp {
        font-size: 0.7rem;
        padding: 0.5rem 1rem;
        height: 1.875rem;
        width: 62%;
      }

      .search-form {
        width: 62%;
      }
    }
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex search-form my-2 my-md-0" role="search">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations">
          <button class="btn search-btn" type="submit"><i class="fa-brands fa-searchengin"></i>Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>SignUp</b></a>
          <a class="nav-link" href="/login"><b>LogIn</b></a>
        <% } %>
        <% if (currUser) { %>
          <a class="nav-link" href="/logout"><b>LogOut</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
