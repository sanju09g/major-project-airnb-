<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center mt-3">
    <h2 class="col-12 col-sm-12 col-md-10 col-lg-8 fw-500 display-6">Signup on <span style="color: #fe424d;">Wanderlust</span></h2>
    <div class="col-12 col-sm-12 col-md-10 col-lg-8">
        <form action="/signup" novalidate method="post" class="needs-validation">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username"  class="form-control glow-field" required>
            <div class="valid-feedback">Looks good!</div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email"  class="form-control glow-field" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password"  class="form-control glow-field" required>
        </div>
        <button class="btn edit-btn">SignUp</button>
        </form>
        <p class="mt-1" style="text-align: center;">Already have an account? <a style="text-decoration: none;" href="/login">Login here</a> </p>
    </div>
</div>